<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shet.activities.FirstTimeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/credit_card_image"
        android:src="@drawable/credit_cards"
        android:padding="0dp"
        />
    <TextView android:text="Scrum Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/credit_card_image"
        android:layout_centerHorizontal="true"
        android:paddingRight="50dp"
        android:textSize="40dp"

        android:id="@+id/text_scrum"/>
    <TextView android:text="Estimation Tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_scrum"
        android:textSize="40dp"
        android:paddingLeft="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_helper"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_helper"
        android:id="@+id/version_text"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/copyright_text"
        android:text="© Alexander Stillesjö 2015"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10dp"
        />
</RelativeLayout>
